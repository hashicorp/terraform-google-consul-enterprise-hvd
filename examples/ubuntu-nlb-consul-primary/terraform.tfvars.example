#------------------------------------------------------------------------------
# Common
#------------------------------------------------------------------------------
project_id  = "1234567890"
region      = "<your-region>"
tags = ["autojoin"] #first tag is used for auto join if not overridden by `var.auto_join_tag`

#------------------------------------------------------------------------------
# Consul configuration settings
#------------------------------------------------------------------------------

consul_tls_cert_sm_secret_name    = "<consul-tls-cert>"
consul_tls_privkey_sm_secret_name = "<consul-tls-privkey>"
consul_tls_ca_cert_sm_secret_name = "<consul-tls-ca-cert>"
consul_license_sm_secret_name     = "<consul-license>"
consul_gossip_key_sm_secret_name  = "<consul-gossip-key>"

#------------------------------------------------------------------------------
# Snapshots
#-----------------------------------------------------------------------------

snapshot_agent = {
    enabled             = true
    storage_bucket_name = <your-storage-bucket-name>
  }

#------------------------------------------------------------------------------
# Networking
#------------------------------------------------------------------------------

network                       = "<your-vpc-name>"
subnetwork                    = "<your-subnetwork-name>"
